{
  "manifest_version": 3,
  "name": "SkinSight",
  "description": "Scan les inventaires CS2 de vos amis Steam.",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://steamcommunity.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://steamcommunity.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
